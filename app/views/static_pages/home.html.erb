<% if current_user %>
	<% @posts.each do |post| %>
	   	<ul class="list-group">
	   		<li class="list-group-item"><b><%=post.user.username%></b> <%=post.created_at%></li>
		   	<li class="list-group-item"><%=post.content%></li>
	   	</ul>
	<% end %>
<% else %>
	<h2><strong>Welcome, sign up or log in to see more</strong></h2>	
<% end %>