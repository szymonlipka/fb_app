- @page_title = "UserAuth | Signup"
.Sign_Form
  %h1 Sign Up
  = form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f|
    %p
      Username: #{f.text_field :username, class: 'form-control'}
    %p
      Email: #{f.text_field :email, class: 'form-control'}
    %p
      Password: #{f.password_field :password, class: 'form-control'}
    %p
      Password Confirmation: #{f.password_field :password_confirmation, class: 'form-control'}
    = f.submit :Signup, class: "btn btn-primary"
  - if @user.errors.any?
    %ul.Signup_Errors
      - for message_error in @user.errors.full_messages
        %li
          * #{message_error}
