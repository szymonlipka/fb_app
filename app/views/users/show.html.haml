- if current_user != @user
  - @page_title = "#{@user.username}'s Dashboard"
  %center
    %h2
      #{@user.username}'s Dashboard
  .column-left
    - @user.groups.each do |group|
      %li
        %b= group.name
- else
  - @page_title = "Dashboard"
  %center
    %h2 Witaj na swojej tablicy
  .column-left
    - if !@user.groups.empty?
      %h5 Grupy do których należysz:
      - @user.groups.each do |group|
        %a{:href => "/group/#{group.id}", class: 'btn btn-warning'}
          =group.name
        %br
    = form_for(:group, :url => {:controller => 'groups', :action => 'create'}) do |f|
      - if @group.errors.any?
        #error_explanation
          .alert.alert-danger
            The group contains #{pluralize(@group.errors.count, "error")}.
          %ul
            - @group.errors.full_messages.each do |msg|
              %li= msg
      = f.text_field :name, class: 'form-control create-group', placeholder: 'Wpisz nazwę grupy'
      = f.submit :submit, value: 'Załóż grupę', class: "btn btn-success"
.column-right
  Twój adres email: #{@user.email} 
  %br
  Twój username: #{@user.username}