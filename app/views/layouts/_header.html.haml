%body
  %header.navbar.navbar-fixed-top.navbar-inverse
    .container
      %nav
        .container-fluid
          .navbar-header
            %a.navbar-brand{:href => "/"} Książka twarzy
          %ul.nav.navbar-nav.navbar-right
            %li.slide= link_to "Home", root_path
            - if signed_in?
              %li.dropdown
                %a.dropdown-toggle.slide{"data-toggle" => "dropdown", :href => "#"}
                  =current_user.name
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to "Dashboard", dashboard_path(current_user.id)
                  %li= link_to "Settings", edit_user_registration_path
                  %li.divider
                  %li
                    = link_to "Log out", destroy_user_session_path, method: "delete"
            - else
              %li.slide= link_to "Log in", sign_in_path
              %li.slide= link_to "Register", sign_up_path
